<article>
    <div class="container mt-5 card shadow">
        <div class="mx-3 my-3">
            <h1>Update Password</h1>
            <form id="update-pass-form" action="/account/update" method="POST">
                    <div class="form-group row my-2">
                        <label for="current-password" class="col-sm-2 col-form-label">Current Password:</label>
                        <div class="col-sm-10">
                            <input  id="current-password" 
                                    type="password" 
                                    name="current"  
                                    class="form-control"/>
                        </div>
                    </div>
                    <div class="form-group row my-2">
                        <label for="new-password" class="col-sm-2 col-form-label">New Password:</label>
                        <div class="col-sm-10">
                            <input  id="new-password" 
                                    type="password" 
                                    name="newpass"  
                                    class="form-control"/>
                        </div>
                    </div>
                    <div class="form-group row my-2">
                        <label for="confirm-password" class="col-sm-2 col-form-label">Confirm Password:</label>
                        <div class="col-sm-10">
                            <input  id="confirm-password" 
                                    type="password" 
                                    name="confirmpass"  
                                    class="form-control"/>
                        </div>
                    </div>
                    <div class="d-flex flex-row-reverse">
                        <button class="btn btn-primary btn-large my-3" type="submit">Update Password</button>
                    </div>
            </form>
            <p class="error">{{error}}</p>
        </div>
    </div>
</article>