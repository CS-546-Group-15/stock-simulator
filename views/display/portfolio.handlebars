{{! This will hold our stock portfolio for each respective user. }}
<article>
  <h1 class="mb-3">My Portfolio</h1>
  {{!--
  <p>This will be the user's portfolio page</p>
  <h2>Welcome {{user.username}}!</h2> --}}
  <p>Total Account Assets: ${{userVal}}</p>
  <p>Liquid Assets: ${{user.cash}}</p>
  <h2>Position Overview</h2>
  <table class="table table-hover table-striped table-bordered">
    <thead class="thead-dark table-secondary">
      <tr>
        <th>Ticker</th>
        <th>Shares</th>
        <th>Bought At</th>
        <th>Current Price</th>
        <th>% Change</th>
        
      </tr>
    </thead>
    {{#each stockList}}
      <tr>
        <td>{{this.ticker}}</td>
        <td>{{this.shares}}</td>
        <td>${{this.bought_at}}</td>
        <td>${{this.curr_price}}</td>
        <td>{{this.percent_change}}%</td>
      </tr>
    {{/each}}
  </table>
  <h2>Buy/Sell Stocks</h2>

</article>