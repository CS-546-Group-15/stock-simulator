<article>
    <div class="container mt-5 card shadow">
        <div class="mx-3 my-3">
            <h1 class="mb-3">Sign Up</h1>
            <p class="error">{{error}}</p>
                <form id="signup-form" action="/signup" method="POST" class="new-signup-info">
                    <div class="form-group row my-2">
                        <label for="username" class="col-sm-2 col-form-label">Username:</label>
                        <div class="col-sm-10">
                            <input  id="username" 
                                    type="text" 
                                    name="username" 
                                    placeholder="WolfWallStreet" 
                                    class="form-control"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="password" class="col-sm-2 col-form-label">Password:</label>
                            <div class="col-sm-10">
                                <input  id="password" 
                                        type="password" 
                                        name="password" 
                                        placeholder="St0cks1ml3g3nd!" 
                                        class="form-control"/>
                            </div>
                    </div>
                    <div class="d-flex flex-row-reverse">
                        <button class="btn btn-primary btn-large my-3" type="submit">Sign up</button>
                    </div>
                </form>
            <a class="loginlink" href="/login">Already have an account? Click here to log-in</a>
        </div>
    </div>
</article>
