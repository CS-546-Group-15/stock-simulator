<p>{{error}}</p>
<article class="new-post">
  <h1>Add to the discussion.</h1>
  <form action="/posts" method="POST" class="new-post-form">
    <div class="form-group">
      <label for="input-title">
        Title
        <input type="text" id="input-title" placeholder="Twitter gets Musk'd" value="{{post.title}}" class="full-width-input"/>
      </label>
    </div>
    <div class="form-group">
      <label for="input-tags">
      Tags
      <input type="text" id="input-tags" data-role="tagsinput"></input>
    </label></div>
    <div class="form-group">
      <label for="post-body">
      Post Body
      <textarea id="post-body" name="body" rows="4" placeholder="Content" class="full-width-input">{{post.body}}</textarea>
    </label>
    </div>
    {{!-- <div class="form-group"></div> --}}
    <button type="submit">Submit Post</button>
    <button type="reset">Clear Form</button>
  </form>
  {{#if hasErrors}}
  <ul class="error-list">
    {{#each errors}}
    <li>
      {{this}}
    </li>
    {{/each}}
  </ul>
  {{/if}}
</article>